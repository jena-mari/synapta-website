{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/app/components/*"],
      "@pages/*": ["src/pages/*"],
      "@home/*": ["src/pages/home-page/*"]
    }
  },
  "include": ["src", "vite.config.ts", "vite.config.mts"]
}